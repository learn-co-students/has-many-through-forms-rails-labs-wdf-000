<h2><%= @post.title %></h2>
<p><%= @post.content %></p>

<h4>Categories</h4>
<% @post.categories.each do |category| %>
  <%= link_to category.name, category %>
<% end %>

<h4>Comments</h4>
<p>
  <% commented_user = [] %>
  <% @post.comments.sort_by { |c| c.user }.each do |comment| %>
    <% unless commented_user.include?(comment.user) %>
      <%= link_to comment.user.username, comment.user %> says:<br>
      <%= comment.content %><br>
      <% commented_user << comment.user %>
    <% else %>
      <%= comment.content %><br>
    <% end %>
  <% end %>
</p>

<h3>Add a Comment</h3>
<%= form_for @post.comments.build do |f| %>
  <%= f.label "Content" %>
  <%= f.text_field :content %>

  <%= f.collection_select :user_id, User.all, :id, :username, include_blank: 'Choose a User' %>

  <%= f.hidden_field :post_id %>
  <%= f.fields_for :user, @post.comments.last.build_user do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>
  <%= f.submit %>
<% end %>
