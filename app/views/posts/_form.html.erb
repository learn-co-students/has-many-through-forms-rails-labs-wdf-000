<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  Choose from existing categories: 
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br>
  <%= f.fields_for :categories, post.categories.build do |category| %>
    New Category Name: <%= category.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>


